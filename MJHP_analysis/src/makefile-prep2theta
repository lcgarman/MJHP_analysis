# Compiler and flags
CC = gcc
CFLAGS = -Wall -Wextra -fsanitize=address -g
LDFLAGS = -fsanitize=address -L/share/apps/dfprograms/fftw3/lib -Wl,-rpath,/usr/lib64
LIBS = -lgsl -lm -lfftw3 -mcmodel=medium 

# Source files
SRCS = prep_mjhp2theta_main.c globals.c structures.c allocate_memory.c cell_parameters.c rwa_functions.c read_binary_abinit.c fftw_functions.c recgrid_functions.c twotheta_functions.c  

# Object files
OBJS = $(SRCS:.c=.o)

# Executable name
TARGET = prepare_mjhp2theta 

all: $(TARGET)

# Linking rule to create the executable
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) $(LDFLAGS) $(LIBS) -o $(TARGET)

# Compilation rule for object files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean rule
clean:
	rm -f $(OBJS)

