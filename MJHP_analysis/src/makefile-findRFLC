# Compiler and flags
CC = gcc
CFLAGS = -Wall -Wextra  -g -I/share/apps/dfprograms/fftw3/include
LDFLAGS = -L/share/apps/dfprograms/fftw3/lib 
LIBS = -lgsl -lm -lfftw3 -mcmodel=medium 

# Source files
SRCS = findRFLC_main.c globals.c structures.c allocate_memory.c rwa_functions.c twotheta_functions.c hkl_functions.c

# Object files
OBJS = $(SRCS:.c=.o)

# Executable name
TARGET = find_reflections 

all: $(TARGET)

# Linking rule to create the executable
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) $(LDFLAGS) $(LIBS) -o $(TARGET)

# Compilation rule for object files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean rule
clean:
	rm -f $(OBJS)

